<!DOCTYPE html>

<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- IE11対策 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Bootstrap CSS -->
    @Styles.Render("~/bundles/css/bootstrap")

    <!-- Custom CSS -->
    @Styles.Render("~/bundles/css/custom-style")

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @Scripts.Render("~/bundles/js/jquery")
    @Scripts.Render("~/bundles/js/bootstrap-bundle")

    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- Navgation Bar -->
    <nav class="navbar navbar-expand-sm navbar-light p-0 demoapp-navbar-bg-color">
        <div class="container">
            <a href="/" class="navbar-brand">
                デモアプリ
            </a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item px-2">
                        <a href="#" class="nav-link active">
                            ナビ＃０１
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="#" class="nav-link">
                            ナビ＃０２
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="#" class="nav-link">
                            ナビ＃０３
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="logout" class="nav-link">
                            ログアウト
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <!-- Footer -->
    <footer class="demoapp-navbar-bg-color footer">
        <div class="container">
            <div class="row" style="height:150px">
                <div class="col">
                    <p class="lead text-center">
                        フッターあああ
                    </p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
